from Shape import Shape
from Rectangle import Rectangle


class Square(Shape):
    def __init__(self, length, color=""):
        """
            Builds square object
            :param:length: Length of square
            :return: None
        """
        super().__init__(color)
        self.length = length

    def get_length(self):
        """
            Gets the length of the square
            :return: Length of the square
        """
        return self.length

    def get_area(self):
        """
            Gets the area of the square
            :return: Area of the square
        """
        return self.length ** 2

    def get_perimeter(self):
        """
            Gets the perimeter of the square
            :return: Perimeter of the square
        """
        return self.length * 4

    def __add__(self, other):
        """
            Creates a new object that is the addition of the two objects
            :return: New addition object
        """
        if isinstance(other, Square):
            return Rectangle(self.length + other.get_length(), self.length + other.get_length())
        else:
            return Rectangle(self.length + other.get_height(), self.length + other.get_length())


y = Square(2)
z = y + y
assert y.get_length() == 2
assert y.get_area() == 4
assert y.get_perimeter() == 8
assert z.get_length() == 4
